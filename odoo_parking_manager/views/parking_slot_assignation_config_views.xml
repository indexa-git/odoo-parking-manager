<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <!-- Actions -->

    <record id="parking_slot_assignation_config_action" model="ir.actions.act_window">
        <field name="name">Slot Assignation Config</field>
        <field name="res_model">parking.slot.assignation.config</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Menu -->

    <menuitem id="parking_slot_assignation_config_menu"
              name="Parking Slot Assignation Config"
              action="parking_slot_assignation_config_action"
              parent="odoo_parking_manager.parking_manager_menu_settings"
              sequence="19"/>

    <!-- Views -->

    <record id="parking_slot_assignation_config_form_view" model="ir.ui.view">
        <field name="name">parking.slot.assignation.config.form.view</field>
        <field name="model">parking.slot.assignation.config</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type"/>
                    <field name="mandatory"/>
                </group>
            </form>
        </field>
    </record>

    <record id="parking_section_tree_view" model="ir.ui.view">
        <field name="name">parking.slot.assignation.config.tree.view</field>
        <field name="model">parking.slot.assignation.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
                <field name="mandatory"/>
            </tree>
        </field>
    </record>

</odoo>